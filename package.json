{
  "name": "minecraft-clone",
  "version": "0.0.1",
  "description": "A simple minecraft clone that can be played online in the browser",
  "author": "Rico Trebeljahr",
  "main": "app.js",
  "engines": {
    "node": ">=10.0"
  },
  "scripts": {
    "dev": "run-s dev:js webpack-server",
    "build": "run-s build:dir build:js",
    "prebuild": "run-s clean lint",
    "clean": "rimraf build",
    "lint": "eslint src/js/",
    "webpack-server": "webpack serve --env NODE_ENV=dev --progress --color --open --hot",
    "webpack-watch": "webpack --env NODE_ENV=dev --progress --color --watch --hot",
    "dev:js": "webpack --env NODE_ENV=dev",
    "build:dir": "copyfiles -a -u 2 src/public/assets/**/*.* build/",
    "build:js": "webpack --env NODE_ENV=prod --progress --color"
  },
  "dependencies": {
    "three": "^0.126.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.2.2",
    "copyfiles": "^2.4.1",
    "css-loader": "^5.2.0",
    "eslint": "^7.22.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.3.9",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "rimraf": "^3.0.2",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^4.0.0-beta.1"
  }
}
